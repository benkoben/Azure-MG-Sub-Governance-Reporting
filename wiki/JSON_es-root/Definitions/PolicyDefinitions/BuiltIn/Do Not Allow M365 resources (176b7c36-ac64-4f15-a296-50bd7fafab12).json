{
  "displayName": "Do Not Allow M365 resources",
  "policyType": "BuiltIn",
  "mode": "All",
  "description": "Block creation of M365 resources.",
  "metadata": {
    "version": "1.0.0",
    "category": "General"
  },
  "parameters": {
    "effect": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "Enable or disable the execution of the policy"
      },
      "allowedValues": [
        "Audit",
        "Deny",
        "Disabled"
      ],
      "defaultValue": "Deny"
    }
  },
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "like": "Microsoft.SaaSHub/*"
        },
        {
          "value": "[field('type')]",
          "exists": true
        }
      ]
    },
    "then": {
      "effect": "[parameters('effect')]"
    }
  }
}
